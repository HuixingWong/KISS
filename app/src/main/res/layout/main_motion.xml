<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/root_mode_desc"
    app:layoutDescription="@xml/main_motion_scene"
    tools:ignore="MotionLayoutInvalidSceneFileReference">

    <ImageView
        android:id="@+id/leftView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/root_mode_desc"
        app:layout_constraintEnd_toStartOf="parent"
        />

    <include
        layout="@layout/main_view"
        android:contentDescription="@string/root_mode_desc"
        >
    </include>

    <ImageView
        android:id="@+id/rightView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:contentDescription="@string/root_mode_desc"
        />

    <ImageView
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:contentDescription="@string/root_mode_desc"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animSwitcher"
        android:text="animSwitcher"
        />


</androidx.constraintlayout.motion.widget.MotionLayout>